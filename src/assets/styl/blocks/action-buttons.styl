.action-buttons {
  position: absolute;
  left: 30%;
  bottom: 0;
  width: 70%;
  margin: 0;
  padding: 5px 0 0 0;
  background: $white;

  &__outer {
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0;
    z-index: 1;
    transition: opacity 300ms ease;

    &:hover {
      opacity: 1;
    }
  }

  &:hover {
    opacity: 1;
  }

  &__item {
    display: inline-block;
    width: 40px;
    height: 40px;
    background-image: url("../img/products/product-action.jpg");
    cursor: pointer;

    &_view {
      background-position: 0 0;
    }
    &_wishlist {
      background-position: -40px 0;
    }
    &_share {
      background-position: -80px 0;
    }
    &_buy {
      background-position: -120px 0;
    }
    &:hover {
      box-shadow: 0 0 1px 1px $green;
    }
  }
}