.products {
  background-color: $creamy;

  &-wrapper {
    //respondToBreakpoints()
    width: 960px;
    margin: 0 auto;

    &:after {
      content: "";
      display: table;
      clear: both;
    }

    @media screen and (max-width: 960px) {
      width: 768px;
    }
  }

  &-header {
    height: 80px;

    &__title {
      float: left;
      font-size: 26px;
      line-height: 80px;
    }

    &__action {
      width: 100px;
      float: right;
      margin-top: 25px;
      border: 1px solid darken($creamy, 20%);
      line-height: 30px;
      text-align: center;
      font-size: 14px;
      color: darken($creamy, 20%);
      cursor: pointer;
    }
  }

  &-container {
    margin: 0 0 0 -30px;
    padding: 0;
    list-style-type: none;

    @media screen and (max-width: 620px) {
      margin-left: 0;
    }

    &:after {
      content: "";
      display: inline-block;
      width: 100%;
    }
  }
}

.product {
  &-item {
    width: 300px;
    height: 270px;
    margin: 0 0 30px 30px;
    position: relative;
    float: left;
    text-align: center;
    background-color: $white;

    @media screen and (max-width: 960px) {
      width: 29%;
    }

    &__image {
      margin-top: 10px;
    }

    &-info {
      width: 100%;
      height: 50px;
      position: absolute;
      bottom: 0;
      border-top: 1px solid $grey;
      background: $white;

      &__price {
        position: relative;
        bottom: 20px;
        left: 5%;
        float: left;
        box-sizing: border-box;
        min-width: 25%;
        max-width: 30%;
        height: 70px;
        padding: 0 5px;
        overflow: hidden;
        z-index: 2;
        font-size: 14px;
        line-height: 70px;
        text-align: center;
        font-weight: bold;
        text-overflow: ellipsis;
        background-color: $green;
        color: $white;

        @media screen and (max-width: 960px) {
          left: 0;
        }
      }

      &__name {
        float: right;
        width: 70%;
        overflow: hidden;
        line-height: 50px;
        font-size: 18px;
        text-align: center;
        white-space: nowrap;
        text-overflow: ellipsis;

        @media screen and (max-width: 960px) {
          width: 75%;
          font-size: 16px;
        }
      }
    }

    &_on-sale {
      width: 70px;
      height: 70px;
      position: absolute;
      top: 0;
      right: 5%;
      font-size: 14px;
      line-height: 70px;
      text-transform: uppercase;
      color: $white;
      background-color: $black;
    }

    &_out-of-stock {
      width: 70px;
      height: 70px;
      position: absolute;
      top: 0;
      right: 5%;
      font-size: 14px;
      text-transform: uppercase;
      color: $white;
      background-color: #f27e4b;
      padding-top: 19px;
      box-sizing: border-box;
    }
  }
}