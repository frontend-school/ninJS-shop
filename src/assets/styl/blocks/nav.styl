.navigation {
  height: 60px;
  background-color: $white;

  @media screen and (max-width: 768px) {
    height: 45px;
  }

  &-wrapper {
    width: 960px;
    margin: 0 auto;

    &:after {
      content: "";
      display: table;
      clear: both;
    }

    @media screen and (max-width: 960px) {
      width: 768px;
    }

    @media screen and (max-width: 768px) {
      width: 90%;
      height: 45px;
    }
  }

  &-menu {
    margin: 0;
    padding: 0;
    list-style: none;

    li:first-child {
      float: left;
      border-left: 1px solid $grey;
    }

    &-item {

      &__link {
        display: block;
        float: left;
        padding: 0 25px;
        border-right: 1px solid $grey;
        line-height: 60px;
        color: $black;
        text-decoration: none;

        &:hover {
          box-shadow: inset 0 0 1px 1px $green;
        }

        @media screen and (max-width: 768px) {
          line-height: 45px;
        }
      }
    }
  }

  &-state {
    position: relative;
    float: right;
    margin: 0;
    padding: 0;
    list-style: none;



    &-item {
      float: left;
      width: 90px;
      line-height: 60px;
      text-align: center;
      border-right: 1px solid $grey;

      &:first-child {
        border-left: 1px solid $grey;
      }

      &:hover {
        cursor: pointer;
        box-shadow: inset 0 0 1px 1px $green;
      }

      &__icon {
        display: inline-block;
        width: 16px;
        height: 16px;
        background-repeat: no-repeat;
        vertical-align: middle;
        background-image: url('../img/nav/navigation-icons.png');

        &_cart {
          background-position: -16px 0;
        }

        &_wishlist {
          background-position: 0 0;
        }
      }

      @media screen and (max-width: 768px) {
        line-height: 45px;
      }
    }
  }

  &__counter {
    display: inline-block;
    min-width: 20px;
    max-width: 65px;
    height: 20px;
    border-radius: 5px;
    font-size: 10px;
    line-height: 20px;
    text-align: center;
    vertical-align: middle;
    color: $white;
    cursor: pointer;
    overflow: hidden;
    text-overflow: ellipsis;

    &_bookmarked {
      background-color: $grey;
    }

    &_in-cart {
      background-color: $green;
    }
  }
}

.basket-toggle {
  position: relative;
  z-index: 10;
}