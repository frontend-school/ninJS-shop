.header {
  background-color: $black;
  height: 45px;

  &__wrapper {
    width: 960px;
    margin: 0 auto;

    &:after {
      content: "";
      display: table;
      clear: both;
    }
  }

  &-logo {
    width: 156px;
    height: 45px;
    float: left;
    display: inline-block;
    vertical-align: middle;

    &:before {
      content: "";
      display: inline-block;
      height: 100%;
      vertical-align: middle;
    }

    &__image {
      vertical-align: middle;
    }
  }

  &__search {
    width: 14px;
    height: 14px;
    float: right;
    margin: 15px 20px 0 0;
    background: url("../img/header/search-icon.png") no-repeat;
    cursor: pointer;
  }

  &-auth {
    height: 45px;
    padding: 0 10px;
    float: right;
    border-left: 1px solid $grey2;
    border-right: 1px solid $grey2;
    color: $grey2;
    font-size: 14px;
    text-align: center;

    &:before {
      content: "";
      display: inline-block;
      height: 100%;
      vertical-align: middle;
    }

    &__link {
      color: $grey2;
      text-decoration: none;

      &:hover {
        color: $grey;
      }
    }
  }
}