.slider-nav {
  background-color: $dark-grey;

  &-wrapper {
    width: 960px;
    margin: 0 auto;

    &:after {
      content: "";
      display: table;
      clear: both;
    }

    @media screen and (max-width: 960px) {
      width: 90%;
    }

  }
}

.nav__position {
  position: relative;
  margin: 0 auto;
  height: 90px;
}

.menu-block__item_description:before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 8px;
  background-color: $black;
}

.menu-block {
  margin: 0 0 0 -1%;
  padding: 0;
  cursor: pointer;

  &__item {
    display: inline-block;
    position: relative;
    margin: 5px 0 0 0.1%;
    width: 19.5%;
    vertical-align: top;

    &_description {
      color: #aaa;
      text-align: center;
      font-size: 10px;
    }
  }
}

.menu-block__item_description:hover::before {
  background-color: $green;
}

.menu-block__item:hover > .menu-block__item_description {
  color: #fff;
}