.basket
  z-index 10
  display block
  position absolute
  right 0
  width 300px
  max-height 500px
  opacity 1
  background #ecece8
  box-shadow 11px 9px 34px -15px rgba(0,0,0,0.75)
  transition opacity 0.2s

  &-header
    height 60px
    padding-left 10px
    border-left 1px solid $grey
    background #fff
    line-height 60px

  &-container
    list-style-type none
    max-height 300px
    margin-right 5px
    padding 0
    border-left 1px solid $grey
    overflow-x hidden
    overflow-y auto

    &::-webkit-scrollbar
      width 8px

    &::-webkit-scrollbar-thumb
      border-radius 3px
      -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.3)
      background rgba(0,0,0,0.1)

    &::-webkit-scrollbar-thumb:window-inactive
      background rgba(0,0,0,0.2)


    &-item
      position: relative
      margin 10px 5px 10px 10px
      min-height 100px
      background #fff

      &__image
        float left
        width 70px
        height 70px
        padding 15px

      &-details
        margin-left 100px
        padding 10px 20px 30px 0

        &__quantity
          float left
          width 32px
          border none

        &__price
          float left
          max-width 100px
          overflow hidden
          text-overflow ellipsis
          white-space nowrap

      &__remove
        cursor pointer
        position absolute
        top 2px
        right 2px
        height 15px
        width 15px
        visibility hidden
        opacity 0
        border-radius 50%
        background $grey
        text-align center
        vertical-align middle
        line-height 10px
        color white
        transition opacity .2s

        &:hover
          background $grey2

    :hover
      .basket-container-item__remove
        visibility visible
        opacity 1

  &-footer
    position: relative
    height 35px
    padding-top 15px
    background: $colorDarkBackground
    text-align center
    background $dark-grey

    &__checkout
      padding 10px
      background-color $colorTheme
      text-align: center
      text-transform uppercase
      text-decoration none
      color white
      transition background-color 0.2s, color 0.2s

      &:hover
        background-color #fff
        color black

.hidden
  display none
  opacity 0
  transition opacity 1s