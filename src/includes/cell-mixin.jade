mixin cellmixin(cell, index)

    - var cellModifiers ='width_'+cell.width+' height_'+cell.height+((cell.float==='right')? ' right' : '')+((cell.shiftTop) ? ' shiftTop' : '')
    if data.cellData[index].items.length === 2
        - var rolloverModifiers= ((cell.height === 2) ? ' items-wide' : ' items-narrow')

    .b-cell(class=cellModifiers)
        .b-product
            .b-product-cover
                img.b-product-cover__image(src=data.cellData[index].cover__image.src)
                .b-product-cover-details
                    each product in data.cellData[index].items
                        .b-product-cover-details-text(class='b-product-cover-details-text_align_' + product.detailsalign)
                            .b-product-cover-details-text__title= product.title
                            span.b-product-cover-details-text__price= product.price
                            if product.oldprice
                                span.b-product-cover-details-text__price_old= product.oldprice
            .b-product-rollover(class=rolloverModifiers)
                each product in data.cellData[index].items
                    .b-product-rollover-item
                        img.b-product-rollover-item__image(src=product.rollover__image)
                        if product.oldprice
                            .b-product-rollover-item__price= 'REG' + product.oldprice
                            .b-product-rollover-item__price(class='b-product-rollover-item__price_sale')
                                span= 'SALE:'
                                br
                                span= product.price
                        else
                            .b-product-rollover-item__price= 'REG' + product.price
                        .b-product-rollover-item__title= product.title
                        a.b-product-rollover-item__button
                            span='Add To Cart'
                        a.b-product-rollover-item__more= 'SEE MORE'