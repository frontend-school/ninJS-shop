.section {

  &__wrapper {
    width: 960px;
    margin: 0 auto;

    &:after {
      content: "";
      display: table;
      clear: both;
    }
  }

  &_header {
    background-color: $black;
  }

  &_navigation {
    background-color: $white;
  }

  &_slider {
    background-image: url("../img/top_unit/bg.png");
    background-size: 100% 100%;
  }

  &_slider-nav {
    background-color: $dark-grey;
  }

  &_specials {
    background-color: $darkest-grey;
  }

  &_products {
     background-color: $creamy;
  }

  &_about {
    background-color: $creamy;
  }

  &_footer {
    background-color: $darkest-grey;
  }

  &_copyright {
    background-color: $dark-grey;
  }

}