/** About Block**/

$font-size = 12px
$line-height = 1.4
$lines-to-show = 3

.about {
  border-top: 1px solid $grey;
  padding: 15px 0px 15px 0px;
  font-size: 12px;

  &-sheeping {
    width: 220px;
    height: 195px;
    margin: 0 10px 10px 0px;
    position: relative;
    float: left;
    background-color: #DFDBD4;
    box-sizing: border-box;
    padding: 10px 10px 10px 10px;
    overflow: hidden;

    &__description{
      ellipsys($font-size,$line-height,6)

    }

  }

  &-testimonials {
    width: 220px;
    height: 195px;
    margin: 0 10px 10px 10px;
    position: relative;
    float: left;
    background-color: #DFDBD4;
    box-sizing: border-box;
    padding: 10px 10px 10px 10px;

    &__title {
      margin-bottom: 15px;

    }

    &__author {
      font-style: italic;
      padding-top:10px;
    }



    &__description {
      ellipsys($font-size,$line-height,6)
     /* height: 120px;
      overflow: hidden;*/
    }
  }


  &-blognews {
    width: 480px;
    height: 195px;
    margin: 0px 0px 0px 10px;
    position: relative;
    float: right;
    background-color: #DFDBD4;
    box-sizing: border-box;
    padding: 10px 10px 10px 10px;
    overflow: hidden;


    &-item {
      display: inline-block;
      margin-bottom:10px;
      height: 50px;
      overflow:hidden;
      &__title {
        font-size:12px;
        margin:0 0 5px 0;
      }

      &__date {
        width: 30px;
        height: 30px;
        text-align: center;
        float: left;
        background-color: #57c5a0;
        color: #fff;
        margin-right: 10px;
        padding:5px 5px 5px 5px;
      }
    }
  }
}

