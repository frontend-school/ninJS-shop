.nav__position
		margin: 0 auto
		display: flex
		position: relative
		
.menu-block__item_description::before
		content: ''
		transform: rotate(30deg)
		border: 4px solid #000
		width: auto
		
.menu-block
	margin-left: -40px	
	cursor: pointer
	
	&__item
		display: inline-block
		position: relative
		width: 188px

		&_description
			color: #aaaaaa
			text-align: center
			font-size: 10px
				
.menu-block__item_description:hover::before
	border: 4px solid #57c5a0
	position: relative
	
.menu-block__item:hover > .menu-block__item_description
	color: #ffffff

@media screen and (max-width: 800px) {
	.menu-block__item {
		margin-left: 10%
	}
}