.specials
  padding 25px 0
  background-color $colorDarkBackground

  &-item
    display block
    float left
    position relative
    width 300px
    height 180px
    margin-right 30px
    overflow hidden

    &:nth-child(3n)
      margin-right 0

    &__img
      center()

    &__title
      center()
      min-width 180px
      padding 15px
      background-color rgba(0,0,0,0.6)
      text-align: center
      text-transform uppercase
      text-decoration none
      color white
      transition background-color 0.2s

      &:hover
        background-color $colorDarkBackground