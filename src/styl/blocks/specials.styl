.specials
  padding 25px 0
  background-color $colorDarkBackground

  &-item
    display block
    float left
    position relative
    width 300px
    height 180px
    margin-right 30px
    overflow hidden

    &_on-sale
      background url('../img/specials/img1.png')
      background-position: center

    &_special-offers
      background url('../img/specials/img2.png')
      background-position: center

    &_must-have
      background url('../img/specials/img3.png')
      background-position: center
      margin-right 0

    &-link
      position absolute
      width 100%
      height 100%
      text-align center
      line-height 180px
      text-decoration none
      text-transform uppercase
      color white

      &:hover
        .specials-item-title
          background-color $colorDarkBackground

    &-title
      padding 15px
      background-color rgba(0,0,0,0.6)
      transition background-color 0.2s