.specials
  padding 25px 0
  background-color $colorDarkBackground

  &-item
    display block
    float left
    position relative
    width 300px
    height 180px
    margin-right 30px

    &:nth-child(3n)
      margin-right 0

    &__img
      position: absolute
      top 0
      left 0
      width 100%
      height 100%

    &__title
      position: absolute
      top: 50%
      left: 50%
      min-width 180px
      transform: translateX(-50%) translateY(-50%)
      padding 15px
      background-color rgba(0,0,0,0.6)
      text-align: center
      text-transform uppercase
      text-decoration none
      color white
      transition background-color 0.2s

      &:hover
        background-color $colorDarkBackground